{
  "manifest_version": 3,
  "name": "Pause YouTube on Tab Switch",
  "version": "1.1",
  "description": "Automatically pauses YouTube videos when you switch tabs or windows.",
  "permissions": ["tabs", "activeTab"],
  "icons": {
    "16": "pause_logo.png",
    "48": "pause_logo.png",
    "128": "pause_logo.png"
  },
  "action": {
    "default_icon": "pause_logo.png",
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
